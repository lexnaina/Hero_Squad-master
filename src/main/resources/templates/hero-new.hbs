{{#partial "content"}}
  <h2 style="margin-left: 30%; text-decoration: underline">CHECKOUT YOUR HEROES LIST!!</h2>
  <br><br>
    {{#each Heroes}}
        <div   class="d-inline-flex justify-content-around card text-white border-light mb-3 bg-primary"
               style="max-width: 20rem; margin-right: 1%; margin-left: 6%"
               id="cards">
            <div class="card-header text-success">Hero Name: {{name}}</div>
            <div class="card-body">
                <p class="card-text">Hero Age: {{age}}</p>
                <p class="card-text">Hero Power: {{specialPower}}</p>
                <p class="card-text">Hero Weakness: {{weakness}}</p>
            </div>
        </div>
    {{/each}}

  <div class="btn-index" style="margin-left: 45%">
      <form action="/squad" >
          <button
                  type="submit"
                  class="btn btn-outline-primary btn-sm"
          >
              Add Squad
          </button>
      </form>
      <form action="/hero" >
          <br> <br>
          <button
                  type="submit"
                  class="btn btn-outline-primary btn-sm"
          >
              Add Hero
          </button>
          <br> <br> <br>
      </form>
  </div>
{{/partial}}

{{>layout.hbs}}
